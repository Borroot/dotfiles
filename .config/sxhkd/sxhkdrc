# Programs
alt + Return
	$TERMINAL

alt + p
	dmenu_run

alt + n ; {v,d,s,p}
	{pcmanfm, discord, spotify, zathura}

alt + n ; {f,o,b,w,g}
	qutebrowser { , overleaf.com/login, brightspace.ru.nl, web.whatsapp.com, github.com/borroot/\?tab=repositories} 2> /dev/null &!

# Computer state
alt + y ; {shift + s, shift + r, l}
	{shutdown now, reboot, i3lock -fi ~/.config/wall.png}

# Keys with 'fn'
Print
	deepin-screenshot

XF86TouchpadToggle
	touchpad-toggle

XF86AudioMute 
	mute-toggle

XF86Audio{Lower,Raise}Volume
	pactl set-sink-volume 0 {-,+}2%

XF86MonBrightness{Down,Up}
	backlight {-,+}5
