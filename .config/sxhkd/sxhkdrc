# TERMINAL
alt + Return
	$TERMINAL

alt + n ; n
	$TERMINAL -e nmtui

alt + n ; t
	$TERMINAL -e $EDITOR $HOME/Nextcloud/todo.txt

# PROGRAMS
alt + p
	dmenu_run

alt + n ; {v,d,s,a}
	{pcmanfm,discord,spotify,android-studio}

# BROWSER
alt + n ; f
	$BROWSER

alt + n ; b
	$BROWSER https://brightspace.ru.nl

alt + n ; w
	$BROWSER https://web.whatsapp.com --target window

alt + n ; g
	$BROWSER github.com/borroot/\?tab=repositories

alt + n ; o
	firefox https://overleaf.com/login

# COMPUTER STATE
alt + y ; {shift + s, shift + r, l}
	{shutdown now, reboot, lock}

# SPECIAL KEYS
Print
	deepin-screenshot

XF86TouchpadToggle
	touchpad-toggle

XF86AudioMute
	mute-toggle

XF86Audio{Lower,Raise}Volume
	pactl set-sink-volume 0 {-,+}2%

XF86MonBrightness{Down,Up}
	backlight {-,+}5
