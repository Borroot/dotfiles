snippet base "template c" b
CFLAGS = -Wall -Wextra -Werror -pedantic
TARGET = ${1}

all: $(TARGET)

$(TARGET): % : %.o
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	rm -f *.o $(TARGET)

.PHONY: all clean
endsnippet

snippet basee "template c++" b
CFLAGS = -Wall -Wextra -Werror -pedantic
TARGET = ${1}

