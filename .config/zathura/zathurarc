set guioptions ""
set statusbar-home-tilde

set default-bg           "#333333"
set statusbar-bg         "#555555"
set recolor-lightcolor   "#303030"
set recolor-darkcolor    "#FFFFFF"

map <C-i> recolor

map [presentation] j navigate next
map [presentation] k navigate previous

map K zoom in
map J zoom out

map d scroll half-down
map u scroll half-up
map <C-j> navigate next
map <C-k> navigate previous
