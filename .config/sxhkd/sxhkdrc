# TERMINAL
alt + Return
	$TERMINAL
alt + n ; n
	$TERMINAL -e nmtui
alt + n ; t
	$TERMINAL -e $EDITOR "$HOME"/Nextcloud/todo.txt

# PROGRAMS
alt + p
	rofi -show run
alt + n ; {v,d,s}
	{pcmanfm,discord,spotify}

# BROWSER
alt + n ; f
	$BROWSER
alt + n ; b
	$BROWSER 'https://brightspace.ru.nl'
alt + n ; o
	$BROWSER 'https://overleaf.com/login'
alt + n ; w
	$BROWSER 'https://web.whatsapp.com' --target window
alt + n ; g
	$BROWSER 'https://github.com/borroot/?tab=repositories'

# COMPUTER STATE
alt + y ; {shift + s, shift + r, h, l}
	{shutdown now, reboot, systemctl suspend, lock}

# SPECIAL KEYS
Print
	deepin-screenshot

XF86TouchpadToggle
	touchpad-toggle
XF86MonBrightness{Down,Up}
	backlight -{d,i} 5

XF86AudioMute
	amixer set Master toggle
XF86Audio{Lower,Raise}Volume
	amixer set Master 2%{-,+}
