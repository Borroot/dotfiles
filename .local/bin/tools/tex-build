#!/usr/bin/env bash
# AUTHOR: Bram Pulles

# This program is run with in $1 a tex file and build it.
if [[ -z $1 ]] || [[ ! $1 =~ .tex$ ]]
then
	>&2 echo "Please provide a tex file."
	exit 1
fi

# Build the given tex file, two times so the references are made.
# The -shell-escape flag is for the `minted` package.
cd $(dirname "$1")
pdflatex -shell-escape $(basename "$1")
