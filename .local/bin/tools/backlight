#!/usr/bin/env bash
# AUTHOR: Bram Pulles

# Interact with the backlight with an inc, dec, set or get.
usage ()
{
	echo "usage: $0 [-i num] [-d num] [-s num] [-g] [-h]"
	exit $1
}

parse_opts ()
{
	local opt
	while getopts 'i:d:s:gh' opt
	do
		case $opt in
			i) new=$((OLD + $OPTARG)) ;;
			d) new=$((OLD - $OPTARG)) ;;
			s) new=$OPTARG            ;;
			g) echo "$OLD" && exit 0  ;;
			h) usage 0                ;;
			?) usage 1                ;;
		esac
	done
}

main ()
{
	[[ $# < 1 ]] && usage 1

	readonly DEVICE=/sys/class/backlight/intel_backlight/brightness
	readonly OLD=$(cat $DEVICE)

	parse_opts "$@"
	sudo sh -c "echo $new > $DEVICE 2> /dev/null"
}

main "$@"
