#!/usr/bin/env bash

DEV='SynPS/2 Synaptics TouchPad'
state=$(xinput list-props "$DEV" | grep 'Device Enabled' | grep -o "[01]$")

if [[ $state == 1 ]]
then
	xinput disable "$DEV"
	unclutter -idle 0 &> /dev/null &
else
	xinput enable "$DEV"
	xinput set-prop "$DEV" 'libinput Tapping Enabled' 1
	xinput set-prop "$DEV" 'libinput Accel Speed' '0.3'
fi
