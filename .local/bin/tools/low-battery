#!/usr/bin/env bash
# AUTHOR: Bram Pulles

# Show a notification when the battery is low.
while true
do
	BATTERY_INFO=$(acpi -b)
	if [[ $(echo $BATTERY_INFO | grep Discharging) && $(echo $BATTERY_INFO | cut -f 5 -d " ") < 00:10:00 ]]
	then
		 notify-send -u critical -t 10000 "Low Battery!" "$BATTERY_INFO"
	fi
	sleep 10
done
